@model Access_Control_Manager.Models.Device


@{
    ViewData["Title"] = "Add Device";
    Layout = "_AppLayout";
}


<div class="col-lg-12 d-flex justify-content-center">
    <div>
        <p class="mb-3">Please add the device information below</p>
        <form asp-action="AddDevice" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-1">
                <label asp-for="Manufacture" class="control-label mb-2"></label>
                <input asp-for="Manufacture" placeholder="Type here ... (required)" required class="form-control"/>
                <span asp-validation-for="Manufacture" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="SerialNumber" class="control-label  mb-2"></label>
                <input asp-for="SerialNumber" placeholder="Type here... (required)" required class="form-control"/>
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="Model" class="control-label  mb-2"></label>
                <input asp-for="Model" placeholder="Type here... (optional)" class="form-control"/>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="Type" class="control-label  mb-2"></label>
                <input asp-for="Type" placeholder="Type here... (optional)" class="form-control"/>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="Accessories" class="control-label  mb-2"></label>
                <input asp-for="Accessories" placeholder="Type here... (optional)" class="form-control"/>
                <span asp-validation-for="Accessories" class="text-danger"></span>
            </div>
            <input hidden asp-for="StudentNumber"/>
            <div class="form-group">
                <input type="submit" value="Add Device" class="next-btn"/>
            </div>
        </form>
    </div>
    
</div>

