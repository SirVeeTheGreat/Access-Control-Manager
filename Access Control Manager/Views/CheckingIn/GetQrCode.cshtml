

@{
    ViewData["Title"] = "Check-in Student";
    Layout = "_AppLayout";
}
<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.0.0/uicons-solid-rounded/css/uicons-solid-rounded.css'>
<div class="col-12 d-flex justify-content-center">

    <form asp-action="CheckOut" asp-controller="CheckingIn" method="get">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label mb-3">Enter QR Code</label>
            <input name="qrcode" required placeholder="Type here..." class="form-control" />
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="next-btn">Find QRCode</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
